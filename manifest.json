{
  "name": "V-dict",
  "version": "0.1.0",
  "manifest_version": 2,
  "description": "Quickly search with 'vocabulary.com'.",
  "icons": { "128": "images/icon.png" },
  "permissions": [
    "contextMenus",
    "tabs"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "css": ["vendors/drop.min.css", "vendors/drop-theme-basic.css", "vendors/drop-theme-arrows-bounce.css", "content-script.css"],
      "js": ["vendors/tether.min.js", "vendors/drop.min.js", "content-script.js"]
    }
  ],
  "web_accessible_resources": [
    "images/*.png"
  ]
}
